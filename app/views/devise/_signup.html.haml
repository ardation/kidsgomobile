.signup.span6
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %fieldset
      .social_sign
        %h3 Don't have a site account yet?
        %a
          %i.icon.icon-user
      %p.sign_title Create one now, it's fast & free!
      = f.email_field :email, class: "input-xlarge", placeholder: "Email", required: ""
      = f.password_field :password, class: "input-xlarge", placeholder: "Password", required: "Password"
      = f.password_field :password_confirmation, class: "input-xlarge", placeholder: "Password Confirmation", required: ""
      %label.checkbox
        = f.check_box :terms
        I agree to the
        %a{:href => "/terms"} Terms of Use
      %button.btn.btn-success.btn-large{:type => "submit"} Create your account
