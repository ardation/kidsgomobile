.full_page_photo
  %iframe{:frameborder => "0", :height => "400", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :src => "http://maps.google.co.nz/?ie=UTF8&t=m&ll=-41.286836,174.774456&spn=0.022573,0.036564&z=14&output=embed", :width => "100%"}
#main
  .container
    %section#contact
      .hgroup
        %h1 Contact us
        %h2 Get in touch with our friendly support team!
        %ul.breadcrumb.pull-right
          %li
            %a{:href => root_path} Home
            %span.divider /
          %li.active Contact
      .row
        .span4.office_address
          %address
            %strong KidsGoMobile, Inc.
            %br/
            795 Folsom Ave, Suite 600
            %br/
            Wellington, New Zealand
          %address
            %strong Email Us
            %br/
            %a{:href => "mailto:support@kidsgomobile.com"} support@kidsgomobile.com
        .span8.contact_form
          = semantic_form_for @contact_form do |f|
            .row
              .span4
                %label Name
                = f.text_field :name, class: "span4"
              .span4
                %label E-mail
                = f.text_field :email, class: "span4"
              .span8
                %label Message
                = text_area_tag "contact_form[message]", nil, rows: "8", class: "span8"
              .span8
                %button.btn.btn-primary.btn-large{:type => "submit"} Submit Message

