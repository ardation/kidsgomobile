source 'https://rubygems.org'
ruby "1.9.3"

gem 'rails', '3.2.3'

# database
gem 'pg'

group :development do
  gem "rails-erd"
end

group :production do
  gem 'hirefireapp'
end

group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Use unicorn as the app server
gem 'unicorn'

# authentication
gem 'devise'
gem 'omniauth'
gem 'omniauth-facebook'
gem "omniauth-google-oauth2"
gem 'omniauth-twitter'
gem "cancan"

# queue
gem 'rake'
gem 'redis'
gem 'delayed_job_active_record'

# css
gem 'sass-rails',   '~> 3.2.3'
gem 'bootstrap-sass', '~> 2.1.1.0'
gem 'font-awesome-sass-rails'
gem 'compass-rails'

# javascript
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'highcharts-rails'
gem 'prettyphoto-rails'
gem 'flexslider'

# fb api
gem "koala"

# templates
gem 'haml'
gem 'formtastic'
gem 'formtastic-plus-bootstrap'
gem 'tabletastic'

# file upload
gem "paperclip", "~> 3.0"
gem 'aws-sdk'
gem "jquery-fileupload-rails"

# api
gem 'rabl-rails'
gem 'inherited_resources'

# monitoring
gem 'newrelic_rpm'

gem 'mail_form'
